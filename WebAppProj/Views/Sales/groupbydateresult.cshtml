@model IList<IGrouping<System.DateTime, MasterProj.Models.Sale>>

@{
    ViewBag.Title = "groupbyresult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Group By Date Sale</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Sale Date:
        </th>
        <th>
            Number of Sales:
        </th>

    </tr>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                @Model[i].Key.Date.ToString("d")
            </td>
            <td>
                @Model[i].Count()
            </td>

        </tr>
    }

</table>
