@model IEnumerable<MasterProj.Models.Genre>

@{
    ViewBag.Title = "Index";
}
<style>

        body {
    background-color : lightblue;
}

    h2 {
        text-shadow: 4px 4px #00ff00;
    }
    input[type=text] {
  width: 100px;
  -webkit-transition: width .35s ease-in-out;
  transition: width .35s ease-in-out;
}
input[type=text]:focus {
  width: 150px;
}
</style>

<h2>Genres</h2>
<div class="links">
    @Html.ActionLink("Titles Per Genre", "TitlesPerGenreGraph")
 </div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreType)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
